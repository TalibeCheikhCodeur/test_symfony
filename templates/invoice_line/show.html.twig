{% extends 'base.html.twig' %}

{% block title %}Invoice Line{% endblock %}

{% block body %}
    <h1>Invoice Line</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ invoice_line.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ invoice_line.description }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ invoice_line.quantity }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ invoice_line.amount }}</td>
            </tr>
            <tr>
                <th>VAT Amount</th>
                <td>{{ invoice_line.vatAmount }}</td>
            </tr>
            <tr>
                <th>Total with VAT</th>
                <td>{{ invoice_line.totalWithVat }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('invoice_line_index') }}" class="btn btn-secondary">Back to list</a>
    <a href="{{ path('invoice_line_edit', {'id': invoice_line.id}) }}" class="btn btn-primary">Edit</a>
    <form method="post" action="{{ path('invoice_line_delete', {'id': invoice_line.id}) }}" style="display: inline-block;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ invoice_line.id) }}">
        <button class="btn btn-danger">Delete</button>
    </form>
{% endblock %}
